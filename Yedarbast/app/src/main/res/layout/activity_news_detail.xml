<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetailActivity">

    <TextView
        android:id="@+id/main_matn_titr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titr"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/main_matn_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_back"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_matn_titr"/>

    <TextView
        android:id="@+id/main_matn_matn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_matn_img"
        android:textSize="15dp"
        android:textColor="@color/zard"
        android:text="matn"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:padding="5dp"/>

</RelativeLayout>