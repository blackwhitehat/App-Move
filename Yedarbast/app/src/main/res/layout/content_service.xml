<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ServiceActivity"
    tools:showIn="@layout/activity_service">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام راننده : "
                android:textColor="#50c7d7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/driver_name_text"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مدل خودرو : "
                android:textColor="#50c7d7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/driver_type_text"
                android:textColor="#000"
                />
        </LinearLayout>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingRight="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="مبدا : "
                       android:textColor="#50c7d7"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/address1_text"
                       android:textColor="#000"
                       />
               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingRight="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="مقصد : "
                       android:textColor="#50c7d7"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/address2_text"
                       android:textColor="#000"
                       />
               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingRight="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:id="@+id/address3_box"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="+ مقصد دوم : "
                       android:textColor="#50c7d7"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/address3_text"
                       android:textColor="#000"
                       />
               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingRight="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:id="@+id/going_back_box"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="+ رفت و برگشت : "
                       android:textColor="#50c7d7"
                       />

               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingRight="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:id="@+id/shop_time_box"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="+ زمان توقف : "
                       android:textColor="#50c7d7"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/stop_time_text"
                       android:textColor="#000"
                       />
               </LinearLayout>



               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#f1f0f0"
                   android:layout_marginTop="10dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="مبلغ پرداختی"
                       android:textColor="#000"
                       android:padding="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:id="@+id/price_text"
                       android:padding="10dp"
                       android:layout_alignParentLeft="true"
                       />
               </RelativeLayout>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#FFF"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="تخفیف"
                       android:textColor="#000"
                       android:padding="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:id="@+id/discount_text"
                       android:padding="10dp"
                       android:layout_alignParentLeft="true"
                       />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#f1f0f0"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="مبلغ کل"
                       android:textColor="#000"
                       android:padding="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:id="@+id/total_price_text"
                       android:padding="10dp"
                       android:layout_alignParentLeft="true"
                       />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#FFF"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="تاریخ سفر"
                       android:textColor="#000"
                       android:padding="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:id="@+id/date_text"
                       android:padding="10dp"
                       android:layout_alignParentLeft="true"
                       />
               </RelativeLayout>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#f1f0f0"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="کد سفر"
                       android:textColor="#000"
                       android:padding="10dp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:id="@+id/order_id_text"
                       android:padding="10dp"
                       android:layout_alignParentLeft="true"
                       />
               </RelativeLayout>
           </LinearLayout>
       </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
