<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Offcode_Activity"
    android:background="@color/black">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_back" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="وارد کردن کد تخفیف:"
        android:textColor="@color/zard"
        android:textSize="36dp"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layoutDirection="ltr"
        android:textColor="@color/zard"
        android:hint="کد را دقیق وارد کنید"
        android:textSize="26dp"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="@color/zard"
        android:id="@+id/eidt_code"
        android:background="@drawable/editborder"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="460dp"
        android:text="ثبت کد"
        android:textSize="32dp"
        android:textColor="@color/zard"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:id="@+id/sub_code"
        android:background="@drawable/editborder"/>

</RelativeLayout>